<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.thanthoai.securesms" >

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SecureSmsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/secure_sms"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".app.SmsConversationActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".app.SmsMessageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".app.SmsConversationActivity"
            android:windowSoftInputMode="stateHidden|adjustUnspecified"
            tools:ignore="UnusedAttribute" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.SmsConversationActivity" />
        </activity>
        <activity
            android:name=".app.ContactActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name"
            android:parentActivityName=".app.SmsConversationActivity"
            android:windowSoftInputMode="stateHidden|adjustUnspecified"
            tools:ignore="UnusedAttribute" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.SmsConversationActivity" />
        </activity>
        <activity
            android:name=".app.SplashScreenActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.ChangeAesPassActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name=".app.SettingActivity"
            android:label="@string/app_name"
            android:parentActivityName=".app.SmsConversationActivity"
            tools:ignore="UnusedAttribute" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".app.SmsConversationActivity" />
        </activity>
        <activity
            android:name=".app.AuthenticationActivity"
            android:finishOnTaskLaunch="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name=".app.ChangeAppPassActivity"
            android:label="@string/app_name" >
        </activity>

        <service
            android:name=".services.UpdatePassphraseService"
            android:exported="false" >
        </service>
        <service
            android:name=".services.DeleteMessageService"
            android:exported="false" >
        </service>
        <service android:name=".services.SaveSentMessageService"
                 android:exported="false" >
        </service>

        <receiver
            android:name=".receiver.SmsSentReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver
            android:name=".receiver.SmsDeliveryReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
    </application>
</manifest>