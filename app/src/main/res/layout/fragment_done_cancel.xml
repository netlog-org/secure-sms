<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/button_cancel"
        android:contentDescription="@null"
        android:src="@drawable/abc_ic_clear_mtrl_alpha"
        android:background="@drawable/flat_button_material"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent" />

    <View
        android:layout_toRightOf="@id/button_cancel"
        android:layout_toEndOf="@id/button_cancel"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@color/gg_grey200"
        android:layout_width="1px"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_toLeftOf="@+id/button_done"
        android:layout_toStartOf="@id/button_done"
        android:layout_toRightOf="@id/button_cancel"
        android:layout_toEndOf="@id/button_cancel"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner"
            android:visibility="gone"
            android:background="@drawable/flat_button_material"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@id/text"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        </RelativeLayout>


    <View
        android:layout_toLeftOf="@+id/button_done"
        android:layout_toStartOf="@id/button_done"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@color/gg_grey200"
        android:layout_width="1px"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/button_done"
        android:src="@drawable/check_mark"
        android:contentDescription="@null"
        android:background="@drawable/flat_button_material"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent" />

</RelativeLayout>